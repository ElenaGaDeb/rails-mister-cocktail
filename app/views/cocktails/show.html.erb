<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
        <% @cocktail.doses.each do |dose| %>
            <%= dose.description %>
             <%= dose.ingredient.name %>
             <%= link_to 'Delete dose', dose_path(dose), method: :delete %>
        <% end %>
    </div>
  </div>
<%= link_to 'Back', cocktails_path %>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
</div>

<div class='container'>
 <%= render 'doses/form' %>
</div>


